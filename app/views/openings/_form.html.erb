<%= form_for @opening, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :opening_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.time_select :opening_time, :class => 'time_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :closing_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.time_select :closing_time, :class => 'time_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :day_of_week, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :day_of_week, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :restaurant_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :restaurant_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                openings_path, :class => 'btn' %>
  </div>
<% end %>
